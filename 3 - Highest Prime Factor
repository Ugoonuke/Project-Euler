#include <iostream>
#include <string>
#include <cmath>

using namespace std;

int main() {
	int a, b = 0, c, d;
	cout<<"Please enter a positive integer: ";
	cin>>a;
	d = a;
	for(int i = 2; a > i; a--) {
		for(int j = 1; j <= sqrt((double)a); j++) {
			if(a%j == 0) b++;
			if(b > 1) {
				b = 0;
				break;
			}
		}
		if(b == 1) {
			c = a;
			break;
		}
	}
	cout<<"Highest Prime Factor between 2-"<<d<<" is "<<c<<endl;
	cout<<"\nEclipse C++"<<endl;
	return 0;
}
